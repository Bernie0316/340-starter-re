<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="message">
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
</div>

<div>
    <form id="addClassificationForm" method="post" action="/inv/add-classification">
        <p>ALL FIELDS ARE REQUIRED</p>
        <fieldset>
            <label for="classification_name">Classification Name</label>
            <p>NAME MUST BE ALPHABETIC CHARACTERS ONLY</p>
            <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z]+$">
            <button type="submit">Add Classification</button>
        </fieldset>
    </form>
</div>