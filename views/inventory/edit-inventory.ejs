<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="message">
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
</div>

<form id="editInventoryForm" action="/inv/update" method="post">
  <p>ALL FIELDS ARE REQUIRED</p>
    <fieldset class="addInventoryFormFieldset">
      <label for="classification_id">Classification</label>
      <!-- controller 要傳入 classificationSelect（HTML） -->
      <div class="select-wrap">
        <%- classificationSelect %>
      </div>

      <label for="make">Make</label>
      <input id="make" name="inv_make" type="text" required
             value="<%= locals.inv_make %>">

      <label for="model">Model</label>
      <input id="model" name="inv_model" type="text" required
             value="<%= locals.inv_model %>">

      <label for="description">Description</label>
      <textarea id="description" name="inv_description" rows="4" required ><%= locals.inv_description %></textarea>

      <label for="image">Image Path</label>
      <input id="image" name="inv_image" type="text" required
            value="<%= locals.inv_image %>"
            placeholder="/images/vehicles/your-image.jpg">

      <label for="thumbnail">Thumbnail Path</label>
      <input id="thumbnail" name="inv_thumbnail" type="text" required
            value="<%= locals.inv_thumbnail %>"
            placeholder="/images/vehicles/your-thumb.jpg">
      
      <label for="price">Price</label>
      <input id="price" name="inv_price" type="number" required
        value="<%= locals.inv_price %>">
      <label for="year">Year</label>
      <input id="year" name="inv_year" type="number" required
        value="<%= locals.inv_year %>">

      <label for="miles">Miles</label>
      <input id="miles" name="inv_miles" type="number" required
        value="<%= locals.inv_miles %>">

      <label for="color">Color</label>
      <input id="color" name="inv_color" type="text" required
        value="<%= locals.inv_color %>">
    </fieldset>

    <div class="form-actions">
      <button type="submit" disabled>Update Vehicle</button>
      <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
    </div>
</form>
<script src="/js/inv-update.js"></script>