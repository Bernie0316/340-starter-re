<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="message">
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
</div>

<form id="deleteInventoryForm" action="/inv/delete" method="post">
    <p>Confirm Deletion - The delete is permanent.</p>
    <fieldset class="addInventoryFormFieldset">
      <label for="make">Make</label>
      <input id="make" name="inv_make" type="text" required
             value="<%= locals.inv_make %>" readonly>

      <label for="model">Model</label>
      <input id="model" name="inv_model" type="text" required
             value="<%= locals.inv_model %>" readonly>
      
      <label for="price">Price</label>
      <input id="price" name="inv_price" type="number" required
        value="<%= locals.inv_price %>" readonly>
      <label for="year">Year</label>
      <input id="year" name="inv_year" type="number" required
        value="<%= locals.inv_year %>" readonly>
    </fieldset>

    <div class="form-actions">
      <button type="submit">Delete Vehicle</button>
      <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
    </div>
</form>