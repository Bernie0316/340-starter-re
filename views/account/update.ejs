<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="message">
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
</div>

<p>ALL FIELDS ARE REQUIRED</p>
<form id="updateAccountForm" action="/account/update-account" method="post">
    <fieldset>
        <legend>Update Account Information</legend>
      <label for="firstname">First Name:</label>
      <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname || account_firstname %>">

  
      <label for="lastname">Last Name:</label>
      <input type="text" id="lastname" name="account_lastname" required value="<%= locals.account_lastname || account_lastname %>">
  
      <label for="email">Email Address:</label>
      <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email || account_email %>">

        <div class="form-actions">
            <button type="submit" disabled>Update</button>
            <input type="hidden" name="account_id" value="<%= locals.account_id || account_id %>">
        </div>
    </fieldset>
</form>
<form id="updatePasswordForm" action="/account/update-password" method="post">
    <fieldset>
        <legend>Update Password</legend>
        <span>*note you origenal password will be changed</span> 
        <label for="accountPassword">Password:</label> 
        <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        <span id="pswdBtn">Show Password</span>

        <div class="form-actions">
            <button type="submit">Change Password</button>
            <input type="hidden" name="account_id" value="<%= locals.account_id || account_id %>">
        </div>
    </fieldset>
</form>
<script src="/js/account-update.js"></script>
<script src="/js/script.js"></script>