<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<div class="message">
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
</div>

<div class="register-container">
  <p>ALL FIELDS ARE REQUIRED</p>
  <form id="registrationForm" action="/account/register" method="post">
    <fieldset></fieldset>
      <label for="firstname">First Name:</label>
      <input type="text" id="firstname" name="account_firstname" required>
  
      <label for="lastname">Last Name:</label>
      <input type="text" id="lastname" name="account_lastname" required>
  
      <label for="email">Email Address:</label>
      <input type="email" id="email" name="account_email" required required placeholder="Enter a valid email address">
  
      <label for="accountPassword">Password:</label> 
      <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
      <span id="pswdBtn">Show Password</span>
  
      <button type="submit">Register</button>
  </form>
</div>
<script src="/js/script.js"></script>